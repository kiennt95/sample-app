<% provide :title, t("edit.title") %>
<h1><%= t "edit.update" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("edit.change"), "http://gravatar.com/emails",
        target: :_blank %>
    </div>
  </div>
</div>
