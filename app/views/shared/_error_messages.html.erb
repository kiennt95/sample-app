<% if object.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-danger">
      <%= t "error.st1" %><%= pluralize object.errors.count, t("error.st2") %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
