<% if user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "error.st1" %><%= pluralize user.errors.count, t("error.st2") %>
    </div>
    <ul>
      <% user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
