<% user ||= current_user %>
<div class="stats">
  <%= link_to relationships_path user_id: user.id, is_following: true do %>
    <strong id="following" class="stat">
      <%= user.following.count %>
    </strong>
    <%= t "stat.following" %>
  <% end %>
  <%= link_to relationships_path user_id: user.id do %>
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
    <%= t "stat.followers" %>
  <% end %>
</div>
